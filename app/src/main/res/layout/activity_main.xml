<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/entry_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result_screen"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/result_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="64dp" />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F1F1F1"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:paddingVertical="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <ImageButton
                android:id="@+id/percentage"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/percentage"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="262dp" />

            <ImageButton
                android:id="@+id/CE"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/ce"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="262dp" />

            <ImageButton
                android:id="@+id/c"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/c"
                tools:layout_editor_absoluteX="208dp"
                tools:layout_editor_absoluteY="262dp" />

            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/cancel"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="262dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <ImageButton
                android:id="@+id/onebyx"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/onebyx"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="358dp" />

            <ImageButton
                android:id="@+id/root"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/root2"
                tools:layout_editor_absoluteX="208dp"
                tools:layout_editor_absoluteY="358dp" />

            <ImageButton
                android:id="@+id/square"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/square"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="358dp" />

            <ImageButton
                android:id="@+id/divide"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/divide"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="358dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <ImageButton
                android:id="@+id/one"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/one"
                tools:layout_editor_absoluteX="208dp"
                tools:layout_editor_absoluteY="456dp" />

            <ImageButton
                android:id="@+id/two"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/two"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="456dp" />

            <ImageButton
                android:id="@+id/three"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/three"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="456dp" />

            <ImageButton
                android:id="@+id/multiply"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/multiply"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="456dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <ImageButton
                android:id="@+id/four"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/four"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="553dp" />

            <ImageButton
                android:id="@+id/five"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/five"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="553dp" />

            <ImageButton
                android:id="@+id/six"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/six"
                tools:layout_editor_absoluteX="208dp"
                tools:layout_editor_absoluteY="553dp" />

            <ImageButton
                android:id="@+id/minus"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/minus"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="553dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <ImageButton
                android:id="@+id/seven"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/seven"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="652dp" />

            <ImageButton
                android:id="@+id/eight"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/eight"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="652dp" />

            <ImageButton
                android:id="@+id/nine"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/nine"
                tools:layout_editor_absoluteX="208dp"
                tools:layout_editor_absoluteY="652dp" />

            <ImageButton
                android:id="@+id/plus"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/plus"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="652dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <ImageButton
                android:id="@+id/n"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/n"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="750dp" />

            <ImageButton
                android:id="@+id/zero"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/zero"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="750dp" />

            <ImageButton
                android:id="@+id/dot"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/dot"
                tools:layout_editor_absoluteX="208dp"
                tools:layout_editor_absoluteY="750dp" />

            <ImageButton
                android:id="@+id/equal"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/equal"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="750dp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>





















































